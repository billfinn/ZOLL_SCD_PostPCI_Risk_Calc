<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/start_activity_horizontal_margin"
    android:paddingRight="@dimen/start_activity_horizontal_margin"
    tools:context=".StartActivity" >

    <TextView
        android:id="@+id/txtResultBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/View01"
        android:layout_alignRight="@+id/View01"
        android:layout_below="@+id/imageView1"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="@string/start_title"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:contentDescription="@string/start_title"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/home_header" />

    <Button
        android:id="@+id/button1"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView2"
        android:minHeight="48dp"
        android:minWidth="54dp"
        android:onClick="clickStart"
        android:text="@string/start_button_label"
        android:textSize="20sp" />

	<ImageButton
        android:id="@+id/MyButton"
        android:contentDescription="@string/infobtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
    	android:layout_width="40dp"
        android:layout_gravity="right|center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/infobutton" />    
    
    <View
        android:id="@+id/View01"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtResultBody"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/blueline"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/View01"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/start_text"
        android:textSize="17sp" />

</RelativeLayout>
